{
  "manifest_version": 2,
  "name": "Pomodoro",
  "description": "Pomodoro Extension for Google Chrome",
  "author": "Krzysztof Krawczyk <krzysztof@kkrawczyk.pl>",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Pomdoro",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
